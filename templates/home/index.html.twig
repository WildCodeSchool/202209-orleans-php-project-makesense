{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}


{% block body %}
	<main class="bg-primary">
		<div class="container-fluid">
			<h1 class="huge-title">DÉCISIONS</h1>

			{{form_start(form, { 'attr': {'class': 'border border-2 rounded-4 d-flex justify-content-between mx-auto w-75 my-5'} })}}
			{{ form_widget(form.input, { 'attr': {'class': 'bg-primary text-light border-primary rounded-4 py-2'} }) }}
			<button type="submit" class="btn">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#FFFF" class="bi bi-search" viewbox="0 0 16 16">
					<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
				</svg>
			</button>
			{{form_end(form)}}

			<h2 class="px-4 pt-4 fw-bolder">
				<a href="#fini" class="navtitle text-decoration-none text-light">Les décisions bientôt finies</a>
			</h2>
			<h2 class="text-light px-4 fw-bolder ">
				<a href="#recent" class="navtitle text-decoration-none text-light">Les décisions récemment terminée</a>
			</h2>
			<h2 class="text-light px-4 fw-bolder ">
				<a href="#toutes" class="navtitle text-decoration-none text-light">Toutes les décisions</a>
			</h2>
			<h2 id="fini" class="text-secondary px-4 pt-4 fw-bolder">
				Les décisions bientôt finies
			</h2>
			<h2 id="recent" class="text-secondary px-4 pt-4 fw-bolder">
				Les décisions récemment terminée
			</h2>
			<h2 id="toutes" class="text-secondary px-4 pt-4 fw-bolder">
				Toutes les décisions
			</h2>
			<div class="container-fluid">
				<div class="row g-3">
					{% for decision in decisions %}
						<div class="col-xl-4">
							{% include "components/_decisionCards.html.twig" %}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
