{% for comment in comments %}
	{% set backgroundColor = background %}
	<article class="{{backgroundColor}} py-4">
		<div class="commentAlign py-3 bg-white rounded-4 mt-2 shadow">
			<div class="ms-3 mt-2 d-flex">
				<img class="mx-2 pictureComment" src="{% if comment.user.poster %}{{ asset('uploads/avatar/')~ comment.user.poster }}{% else %}{{ asset('build/images/icons/person.svg') }}{% endif %}" alt="Image de l'auteur">
				<div class="my-auto">{{comment.user.firstname}}
					{{comment.user.lastname}}</div>
			</div>
			<div class="mx-4 mt-4 mb-1">
				{{comment.comment|raw}}
			</div>
		</div>
	</article>
{% endfor %}
